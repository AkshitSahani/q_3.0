<div class="party-form">
  <h1 class="title" id="playlist-title"> CREATE A PLAYLIST</h1>
  <%= form_for @playlist_q do |f| %>
    <% if @playlist_q.errors.any? %>
      <div class="error_messages">
        <ul>
          <% @playlist_q.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field input-field">
      <%= f.text_field :name, :placeholder => "Name" %> <br />
    </div>
    <div class="field input-field">
      <%= f.text_field :description, :placeholder => "Description" %> <br />
    </div>
    <div class="field">
      <%= f.label :theme %>
      <%= f.select(:theme, @themes, {:prompt => "Select a Theme"}, { :class => 'browser-default dropdown' }) %> <br />
    </div>
    <div class="field">
      <%= f.label :guest_song_limit %>
      <%= f.select(:song_limit, @song_limits, {}, { :class => 'browser-default dropdown' }) %> <br />
    </div>


    <button class="btn login-session" id="playlist-button" type="submit" name="action"> Create</button>
    <div class="form-close">
      X
    </div>
</div>


<% end %>
