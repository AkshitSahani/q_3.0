  <link rel="stylesheet" media="all" href="cssbasic.css" />
<link rel="stylesheet" media="(min-width: 500px)" href="csswide.css" />

  <script type="text/javascript">
    <%= render :partial => "nextsong.js" %>
  </script>

  <% if (@playlist_q.public) && (@access == "Guest" || @access == "Viewer") %>
  <div class="hidden add-search-container">
    <a class="add-search-button">Add A Song</a> 
  <% else %>
  <div class="add-search-container">
    <a class="add-search-button">Add A Song</a>
  <% end %>
</div>

  <div class="search-container hidden">
    <section class="search">

      <a class="hidden back waves-effect waves-light btn pink darken-1">Back to playlist</a>

      <!-- <button class="back">Back to playlist</button> -->
      <%= form_tag  playlist_suggestedsongs_path(params[:id]), method: "get" do |f| %>
        <div class="field">
          <%= text_field_tag :search, nil, placeholder:'Search Music' %>
          <span class="search-submit"><%= submit_tag "Search" %></span>
        </div>
      <% end %>

      <div id="search_results"></div>
    </section>
    </div>


<div class="song-list">
  <% @songs.each do |song| %>


    <% if song.status == "played" %>
      <div class="song-in-queue played" data-playlist-id=<%=@playlist_q.id%> data-suggested-song-id=<%= song.id %>>
        <i class="fa fa-check" aria-hidden="true"></i>
     
    <% elsif song.status == "playing" %>
      <div class="song-in-queue playing" data-playlist-id=<%=@playlist_q.id%> data-suggested-song-id=<%= song.id %>>
        <i class="fa fa-volume-down" aria-hidden="true"></i>
     
    <% else %>
      <div class="song-in-queue que" data-playlist-id=<%=@playlist_q.id%> data-suggested-song-id=<%= song.id %>>
        <i class="fa fa-long-arrow-up" aria-hidden="true"></i>
       
    <% end %>


   <span class="song-name"><%= song.name %> - <%= song.artist %></span><br/>
    <span class="added-by">Added By: <span class="song-added-by-user"><%= User.find(song.user_id).first_name %></span></span>

      <% if (@access == "Host") %> <!-- if the user is host -->
        <% if @playlist_q.public %>
          <span class="contain">
            <span class=" buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote  thumb_btn"><i class="material-icons">thumb_down</i></button></span> &nbsp
          </span>
        <%else %>
          <% if song.status == "que" %>
            <% if Vote.find_by(suggestedsong_id: song.id, user_id: session[:user_id]) %>
            <% @vote_now = Vote.find_by(suggestedsong_id: song.id, user_id: session[:user_id]).status %>
              <% if @vote_now == "up" %>
              <span class="contain">
                
                <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span><a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a></span> &nbsp
              </span>
              <% elsif @vote_now == "down" %>
                <span class="contain">
                <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span><a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a></span> &nbsp
                </span>
              <% end %>
            <% else %>
              <span class="contain">
                <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span><a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a></span> &nbsp
              </span>
            <% end %>

          <% elsif song.status == "playing" %>
            <span class="contain">
              <span class="buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span><a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a></span> &nbsp
            </span>
          <% else %> <!-- if song is played -->
            <span class="contain">
             <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span><a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a></span> &nbsp
            </span>
          <% end %> <!-- end of if the playlist is public/private -->
        <% end %>  <!-- end of if the user is Host -->
      <% elsif (@access == "Guest") %> <!-- if the user is Guest -->
        <% if @playlist_q.public == false %> <!-- if playlist is private -->
          <% if song.status == "que" %>
            <% if Vote.find_by(suggestedsong_id: song.id, user_id: session[:user_id]) %>
            <% @vote_now = Vote.find_by(suggestedsong_id: song.id, user_id: session[:user_id]).status %>
              <% if @vote_now == "up" %>
              <span class="contain">
                <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
              </span>
              <% elsif @vote_now == "down" %>
                <span class="contain">
                  <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
                </span>
              <% end %>
            <% else %>
              <span class="contain">
                <% if (User.find(song.user_id).id == session[:user_id]) %>
                  <a class="thumb_btn delete_song_btn delete-song-show delete-song">Delete</a>
                <% end %>
                <span class="buttons"><button type="button" name="button" class="upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="downvote  thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
              </span>
            <% end %>
          <% elsif song.status == "playing" %>
            <span class="contain">
              <span class=" buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote thumb_btn "><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
            </span>
          <% else %> <!-- if song is played -->
            <span class="contain">
              <span class=" buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
            </span>
          <% end %>
        <% else %> <!-- if playlist is public -->
          <span class="contain">
            <span class="hidden buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
          </span>
        <% end %>
      <% else %> <!-- if the user is Viewer -->
        <span class="contain">
          <span class="hidden buttons"><button type="button" name="button" class="hidden upvote thumb_btn"><i class="material-icons">thumb_up</i></button>&nbsp<button type="button" name="button" class="hidden downvote thumb_btn"><i class="material-icons">thumb_down</i></button><span class="heart thumb_btn"><i class="fa fa-heart"></i> &nbsp<span class="netvote" id=<%=song.id%>><%= song.net_vote %></span></span></span> &nbsp
        </span>
      <% end %>

      

    </div> <!-- ends the song div -->

    <% end %> <!-- ends the song loop -->
</div>

