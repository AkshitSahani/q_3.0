<section class="search">
  <h1>Search A Song</h1>
  <%= form_tag  root_path, method: "get" do |f| %>
    <div class="field">
      <%= label_tag :search %><br/>
      <%= text_field_tag :search %>
    </div>
    <div><%= submit_tag "Search" %></div>
  <% end %>

  <div id="search_results"></div>
</section>

<h2>Search Results</h2>
<article>
  <h1>Albums</h1>
  <% if @albums["data"] %>
    <% titles = [] %>
    <% @albums["data"].each do |album| %>
      <% unless titles.include?(album['title']) %>
        <% titles << album['title'] %>
      <% end %>
    <% end %>
  <% end %>
  <% titles.each do |title| %>
    <p><a href="/?&search=<%= title %>" ><%= title %></a><p>
  <% end %>

  <h1>Tracks</h1>
  <% if @tracks %>
    <% @tracks["data"].each do |track| %>
      <div>
        <div name= <%= track["id"]%> ><%= track["title"] %></div>
        <button class="suggest_song"> Add </button>
      </div>
    <% end %>
  <% end %>

</article>
