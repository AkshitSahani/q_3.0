<div class="sign-up-form">
  <h1 class="title">CREATE AN ACCOUNT</h1>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <button class="btn login-session" id="facebook-button" type="submit" name="action">SIGN UP WITH FACEBOOK</button>
    <div class="or-form">
      <strong class='or-form-text'>OR</strong>
    </div>
    <div class="field input-field">
      <!-- <%= f.label :first_name %><br /> -->
      <%= f.text_field :first_name, :placeholder => "First Name" %>
      <%= f.text_field :last_name, :placeholder => "Last Name" %>
    </div>
    <div class="field input-field">
      <!-- <%= f.label :email %><br /> -->
      <%= f.text_field :email, :placeholder => "Email" %>
    </div>
    <div class="field input-field">
      <!-- <%= f.label :password %><br /> -->
      <%= f.password_field :password, :placeholder => "Password" %>
    </div>
    <div class="field input-field">
      <!-- <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
    </div>
    <button class="btn login-session" id="sign-up-button" type="submit" name="action">Let's Party</button>

    <p class="have-account-text">Already have an account? <a href="/sessions/new">Log in here.</a></p>
</div>
<% end %>
