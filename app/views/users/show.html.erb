<div class="buttons-user party-buttons">
  <div><%= link_to "Host a Party", new_playlist_path, class: 'btn parties host-button' %></div>
  <div><%= link_to "Join a Party", join_path, class: 'btn parties join-button' %></div>
</div>

<div class="hosted-playlists"><span id="host-title">Hosted Playlists</span>
<ol>
  <% @hosted.each do |playlist| %>
  <div class='hosted-playlist' playlist-id="<%=playlist.id%>">
    <li><%= link_to "#{playlist.name} | #{playlist.theme} | Access Code: #{playlist.access_code}", playlist_path(playlist) %>
      <span class='edit-delete'><span class="guestlist"><%= link_to "Guestlist", '#modal1' %> |</span> <span class="edits"> <%= link_to "Edit", edit_playlist_path(playlist) %> | <%= link_to "Delete", playlist_path(playlist), method: :delete %> </span></span>
</div>
  <% end %>
</ol>
</div>

<div class="guest-playlists"><span id="guest-title">Guest Playlists</span>
<ol>
  <% @guest.each do |playlist| %>
  <div class="guest-playlist">
  <li><%= link_to "#{playlist.name} | #{playlist.theme}", playlist_path(playlist) %>
  </div>
  <% end %>
</ol>

</div>

<div class="guest-list-container modal" id="modal1">
  <h3 class='guest-title'>Guest List</h3>

  <!-- <span class="modal-action modal-close waves-effect waves-green btn-flat">X</span> -->
  <ol>

  </ol>
</div>
